<% if user_signed_in? %> 
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
  <%= button_to "Create Event", new_event_path, method: :get %> 
  <%= button_to "My Events", user_path(current_user), method: :get %> 
<% else %>
  <%= button_to "Sign in", new_user_session_path %> 
<% end %>

<h1>All Events:</h1>

<% if user_signed_in? %> 
  <% @upcoming_events.each do |event| %>
    <h3><%= link_to(event.title, event_path(event.id)) %></h3>
    <p><%= "Host: " + event.creator.username %></p>
    <p><%= event.date %></p>
    <p><%= event.location %></p>
    <p><%= event.description %></p>
  <% end %>
 
 <h2>Past Events:</h2>
  <% @past_events.each do |event| %>
    <h3><%= link_to(event.title, event_path(event.id)) %></h3>
    <p><%= "Host: " + event.creator.username %></p>
    <p><%= event.date %></p>
    <p><%= event.location %></p>
    <p><%= event.description %></p>
  <% end %>


<% else %>
  <%= button_to "Sign in", new_user_session_path %> 
<% end %>

